<html>
    <head>
        <title>Login - Book Summary</title>
        {{>common}}
        <link type="text/css" rel="stylesheet" href="/styles/user.css">
    </head>

    <body>
        {{>navbar}}

        <div class="container">
            <div class="row">
                <div class="col-xs-12"><h1>Login</h1></div>
            </div>
            {{#error}}
            <div class="row">
                <div class="message error col-xs-12">
                    <p>{{ . }}</p>
                </div>
            </div>
            {{/error}}
            {{#success}}
            <div class="row">
                <div class="message success col-xs-12">
                    <p>{{ . }}</p>
                </div>
            </div>
            {{/success}}
            <div class="row>
                <div class="col-xs-12">
                    <form method="POST" action="/login">
                        <div class="row">
                            <div class="col-xs-12">
                                <label>Email</label>
                                <input name="email" type="text" class="form-control" value="{{ email }}"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <label>Password</label>
                                <input name="password" type="password" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-default btn-block">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
