{{#books}}
<div class="panel row">
    <div class="col-xs-9 col-lg-11 col-xs-offset-3 col-lg-offset-1">
        <div class="col-xs-12 col-lg-10 col-lg-push-2">
            <p class="book-title"> {{ title }} by {{ author }} </p>
            <div class="visible-lg-block hidden-xs-block">{{{ description }}}</div>
        </div>
        <div class="col-xs-12 col-lg-2 col-lg-pull-10">
            <a href="{{#summary_url}} {{ . }} {{/summary_url}} {{^summary_url}} {{ description_url }} {{/summary_url}}">
                <img class="img-responsive" src="{{ image }}"></img>
            </a>
        </div>
    </div>
</div>
{{/books}}

<div class="row">
    {{#previous}}
    <div class="{{#next}} col-xs-offset-3 col-xs-3 {{/next}} {{^next}} col-xs-offset-3 col-xs-6 {{/next}}">
        <a class="btn btn-default btn-block" href="{{ . }}">Previous</a>
    </div>
    {{/previous}}
    {{#next}}
    <div class="{{#previous}} col-xs-3 {{/previous}} {{^previous}} col-xs-offset-3 col-xs-6 {{/previous}}">
        <a class="btn btn-default btn-block" href="{{ . }}">Next</a>
    </div>
    {{/next}}
</div>
