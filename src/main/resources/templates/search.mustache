<html>
    <head>
        <title>Book Search</title>
        {{>common}}
        <link type="text/css" rel="stylesheet" href="/styles/home.css">
    </head>

    <body>
        {{>navbar}}

        <div class="container">
            <div class="row">
                <form method="GET" action="/books/search">
                    <div class="col-xs-10">
                        <div class="form-group">
                            <input name="q" class="form-control" type="text" value="{{q}}" />
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </form>
            </div>

            {{#books}}
            <div class="panel row">
                <div class="col-xs-12 col-xs-offset-3 col-lg-offset-1">
                    <div class="col-xs-12 col-lg-10 col-lg-push-2">
                        <p class="book-title"> {{ title }} by {{ author }} </p>
                        <div class="visible-lg-block hidden-xs-block">{{{ description }}}</div>
                    </div>
                    <div class="col-xs-12 col-lg-2 col-lg-pull-10">
                        <a href="/books/ext/{{ externalId }}/description"><img class="img-responsive" src="{{ imageUrl }}"></img></a>
                    </div>
                </div>
            </div>
            {{/books}}
        </div>
    </body>
</html>
