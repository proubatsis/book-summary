<html>
    <head>
        <title>Book Search</title>
        {{>common}}
        <link type="text/css" rel="stylesheet" href="/styles/home.css">
        <script type="text/javascript" src="/scripts/search.js"></script>
    </head>

    <body>
        {{>navbar}}

        <div class="container">
            <div class="row">
                <form id="searchForm" method="GET" action="{{ search_url }}">
                    <div class="col-xs-10">
                        <div class="form-group">
                            <input name="q" class="form-control" type="text" value="{{q}}" />
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </form>
            </div>

            <div id="results">
                {{>search_results}}
            </div>
        </div>
    </body>
</html>
