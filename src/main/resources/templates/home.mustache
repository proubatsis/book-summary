<html>
    <head>
        <title>Book Summary</title>
        {{>common}}
        <link type="text/css" rel="stylesheet" href="/styles/home.css">
    </head>

    <body>
        {{>navbar}}

        <div class="container">
            <p> {{ title }} </p>
            {{#books}}
            <div class="panel row">
                <div class="col-xs-12 col-xs-offset-3 col-lg-offset-1">
                    <div class="col-xs-12 col-lg-10 col-lg-push-2">
                        <div class="row">
                            <p class="book-title"> {{ title }} by {{ author }} </p>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <a class="book-view-choice btn btn-default" href="{{ description_url }}">Description</a>
                            </div>
                            <div class="col-xs-2">
                                <a class="book-view-choice btn btn-default" href="{{ summary_url }}">Summary</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-2 col-lg-pull-10">
                        <a href="{{ description_url }}"><img class="img-responsive" src="{{ image }}"></img></a>
                    </div>
                </div>
            </div>
            {{/books}}
        </div>
    </body>
</html>
